<launch>
  <arg name="config_file" default="$(find-pkg-share imu_anomaly_monitor)/config/imu_anomaly_monitor.param.yaml"/>

  <node pkg="imu_anomaly_monitor" exec="imu_anomaly_monitor" name="imu_anomaly_monitor_node" output="screen">
    <!-- <param from="$(var config_file)"/> -->
    <remap from="~/input/twist" to="/sensing/vehicle_velocity_converter/twist_with_covariance"/>
    <remap from="~/input/imu" to="/sensing/imu/imu_data"/>
  </node>
</launch>
